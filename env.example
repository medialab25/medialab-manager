# Notification Settings
MEDIALAB_NOTIFICATION_SMTP_RELAY=192.168.2.1
MEDIALAB_NOTIFICATION_SMTP_PORT=25
MEDIALAB_NOTIFICATION_SMTP_FROM=MediaLab Admin <admin@spongnet.uk>
