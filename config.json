{
    "PROJECT_NAME": "MediaLab Manager",
    "VERSION": "0.1.0",
    "DESCRIPTION": "MediaLab Management System",
    "DATABASE": {
        "MAIN_DB_PATH": "data/main.db",
        "MEDIA_DB_PATH": "data/media.db"
    },
    "NOTIFICATION": {
        "SMTP_RELAY": "192.168.2.1",
        "SMTP_PORT": 25,
        "SMTP_FROM": "MediaLab Admin <admin@spongnet.uk>",
        "SMTP_TO": "medialab25@icloud.com"
    },
    "TASK_FILTERS": {
        "tasks_filter": {
            "name": "Tasks",
            "type": "task"
        },
        "test_filter": {
            "name": "Events",
            "type": "Event",
            "sub_type": "Event"
        }
    },
    "TASKS_FILE": "tasks.json",
    "MEDIA_DATA": {
        "storage": {
            "media": {
                "path": "/srv/storage/media",
                "type": "source"
            },
            "cache": {
                "path": "/srv/storage/cache",
                "type": "cache"
            }
        },
        "libraries": {
            "source": {
                "storage": "media",
                "id": "tv-hd",
                "quality": "hd",
                "type": "tv",
                "description": "TV-HD"
            }
        }
    }
}